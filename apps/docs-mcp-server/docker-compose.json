{
  "services": [
    {
      "name": "docs-mcp-server",
      "image": "ghcr.io/arabold/docs-mcp-server:latest",
      "isMain": true,
      "internalPort": "6280",
      "environment": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "OPENAI_API_BASE": "${OPENAI_API_BASE}",
        "DOCS_MCP_EMBEDDING_MODEL": "${DOCS_MCP_EMBEDDING_MODEL:-nomic-embed-text}",
        "PORT": "${PORT:-6280}"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/data"
        }
      ]
    }
  ]
}